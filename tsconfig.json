{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2020",                 
    "module": "NodeNext",                
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,

    
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    
    "jsx": "preserve" 
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
